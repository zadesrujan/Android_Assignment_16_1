<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.android_assignment_16_1.MainActivity">

    <LinearLayout
        android:id="@+id/enter_data_view"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">
        <EditText
            android:id="@+id/enter_data"
            android:layout_weight="2.25"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:background="#ffffff" />
        <requestFocus />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="0.75"
            android:text="Add Data" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/enter_data_view"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="#1e33ef"
        android:text="Info from file"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/show_data"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/txt_title"
        android:layout_marginTop="10dp"
        android:textColor="#0d0d0d"
        android:textSize="20sp"
        android:text=" " />
    <Button
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_data"
        android:text="Delete File"
        />


</RelativeLayout>
